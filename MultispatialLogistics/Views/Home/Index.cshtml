@{
    ViewData["Title"] = "Home Page";
}

@ViewData["Route"]
@ViewData["Message"]
<form method="post">
    <label for="origin">Origin System Name</label>
    <input type="text" id="origin" name="origin" placeholder="Origin System" />
    <br />
    <label for="destination">Destination System Name</label>
    <input type="text" id="destination" name="destination" placeholder="Destination System" />
    <br />
    <label for="ship">Ship Name</label>
    <input type="text" id="ship" name="ship" placeholder="Ship Name" />
    <br />
    <input type="submit"/>
</form>